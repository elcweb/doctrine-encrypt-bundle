{
    "name": "elcweb/doctrine-encrypt-bundle",
    "type": "symfony-bundle",
    "description": "Package encrypts and decrypts Doctrine fields through life cycle events.",
    "license": "MIT",
    "keywords": ["doctrine", "aes256", "encrypt", "decrypt"],
    "authors": [
        {
            "name": "Etienne Lachance",
            "email": "el@elcweb.ca"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "symfony/framework-bundle": ">=2.1,<3.0-dev",
        "doctrine/orm": "~2.0",
        "ext-mcrypt": "*"
    },
    "autoload": {
        "psr-0": { "Elcweb\\DoctrineEncryptBundle": "" }
    },
    "minimum-stability": "dev",
    "target-dir": "Elcweb/DoctrineEncryptBundle"
}
